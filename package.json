{
  "name": "webhooks-server",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/jezikk/webhooks-server.git",
  "author": "Michal Vrbata <vrbata@outlook.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node ./src/server.js",
    "watch:dev": "nodemon ./src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
